@model IEnumerable<Sabores.Models.Cursos>

@{
    ViewData["Title"] = "Index";
}
<input class="btn btn-light" type="button" onclick="history.back()" name="volver atrás" value="volver atrás">
<h2>Gestión de cursos de cocina</h2>

<p>
    <a asp-action="Create">Agregar un cruso nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Horario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Horario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdCurso"><input type="button" value="Actualizar" class="btn btn-info btn-sm" /></a> |
                <a asp-action="Details" asp-route-id="@item.IdCurso">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.IdCurso"><input type="button" value="Eliminar" class="btn btn-danger btn-sm" /></a>
            </td>
        </tr>
}
    </tbody>
</table>
